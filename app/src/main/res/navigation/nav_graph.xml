<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_repo_list">

    <fragment
        android:id="@+id/fragment_repo_list"
        android:name="com.github.abnamro.presentation.repo.list.RepoListFragment"
        android:label="@string/fragment_repo_list_label"
        tools:layout="@layout/fragment_repo_list">

        <action
            android:id="@+id/show_details"
            app:destination="@id/fragment_repo_details"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:launchSingleTop="true"
            app:popExitAnim="@anim/fade_out"
            app:popUpTo="@id/fragment_repo_list" />

    </fragment>

    <fragment
        android:id="@+id/fragment_repo_details"
        android:name="com.github.abnamro.presentation.repo.details.RepoDetailsFragment"
        android:label="{pageTitle}"
        tools:layout="@layout/fragment_repo_details">

        <argument
            android:name="pageTitle"
            app:argType="string" />

        <argument
            android:name="query"
            app:argType="string" />

    </fragment>

</navigation>