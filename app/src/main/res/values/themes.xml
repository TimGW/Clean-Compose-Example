<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ABNAMROAssessment" parent="Base.Theme" />

    <style name="Base.Theme" parent="Base.MaterialThemeBuilder">
        <item name="iconTint">?colorSecondary</item>

        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Theme.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Theme.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Theme.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Theme.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Theme.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.Theme.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Theme.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Theme.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Theme.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.Theme.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.Theme.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.Theme.LabelSmall</item>

    </style>

    <style name="Base.MaterialThemeBuilder" parent="Theme.Material3.DayNight">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            ?android:colorBackground
        </item>
    </style>

    <style name="AppTheme.Blue" parent="Theme.ABNAMROAssessment">
        <item name="colorPrimary">@color/color_blue_primary</item>
        <item name="colorOnPrimary">@color/color_blue_onPrimary</item>
        <item name="colorPrimaryContainer">@color/color_blue_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/color_blue_onPrimaryContainer</item>
        <item name="colorSecondary">@color/color_blue_secondary</item>
        <item name="colorOnSecondary">@color/color_blue_onSecondary</item>
        <item name="colorSecondaryContainer">@color/color_blue_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/color_blue_onSecondaryContainer</item>
        <item name="colorTertiary">@color/color_blue_tertiary</item>
        <item name="colorOnTertiary">@color/color_blue_onTertiary</item>
        <item name="colorTertiaryContainer">@color/color_blue_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/color_blue_onTertiaryContainer</item>
        <item name="colorError">@color/color_blue_error</item>
        <item name="colorOnError">@color/color_blue_onError</item>
        <item name="colorErrorContainer">@color/color_blue_errorContainer</item>
        <item name="colorOnErrorContainer">@color/color_blue_onErrorContainer</item>
        <item name="android:colorBackground">@color/color_blue_background</item>
        <item name="colorOnBackground">@color/color_blue_onBackground</item>
        <item name="colorSurface">@color/color_blue_surface</item>
        <item name="colorOnSurface">@color/color_blue_onSurface</item>
        <item name="colorSurfaceVariant">@color/color_blue_onSurfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/color_blue_onSurfaceVariant</item>
        <item name="colorOutline">@color/color_blue_outline</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.SelectedCornerRadius" parent="">
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

</resources>
